@section Scripts
    {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/PersianDatePicker.min.js"></script>

    <script>

        function goBack() {
            window.history.back();
        }



        $(document).ready(function () {

            $('#expireDate1').persianDatepicker({
                formatDate: "YYYY/MM/DD",
                altFormat: 'X',
                observer: true,
                timePicker: {
                    enabled: false
                },

            });
            $("#expireDate1").val('');
            $('#reserveDate1').persianDatepicker({
                formatDate: "YYYY/MM/DD",
                altFormat: 'X',
                observer: true,
                timePicker: {
                    enabled: false
                },

            });
            $("#reserveDate1").val('');

        });
        function numberWithCommas(x) {
            var tmp = x.value;
            while (tmp.indexOf(',') != -1)
                tmp = tmp.replace(',', '');
            var parts = tmp.toString().split(".");
            parts[0] = parts[0].replace(/\B(?=(\d{3})+(?!\d))/g, ",");
            x.value = parts.join(".");
        }
        $('form').submit(function () {
            if ($('#ClassRoom_price').length != 0) {
                while (ClassRoom_price.value.indexOf(',') != -1) {
                    ClassRoom_price.value = ClassRoom_price.value.replace(',', '');
                }
            }
            if ($('#ClassRoom_discountPrice').length != 0) {
                while (ClassRoom_discountPrice.value.indexOf(',') != -1) {
                    ClassRoom_discountPrice.value = ClassRoom_discountPrice.value.replace(',', '');
                }
            }
        });

        $('#RemoveImageItems').on('click', '.btnremovefile', function () {
            RemoveFiles('RemoveImageItems', '/CustomerHome/RemoveFileClassRoom', 'Id', $(this).attr("data-rid"));
            $(this).closest('div').parent().html('');
        });
    </script>

